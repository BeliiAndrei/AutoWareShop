@{
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
    ViewBag.Title = "Management News";
}

@model WebShop.Domain.News.NewsDBTable

<div class="container mt-4">
    <h2 class="mb-4">Управление новостями</h2>

    <div class="btn-group mb-4" role="group">
        <button type="button" class="btn btn-secondary" onclick="selectAction('getList')">Получить список</button>
        <button type="button" class="btn btn-secondary" onclick="selectAction('getById')">Найти по ID</button>
        <button type="button" class="btn btn-primary" onclick="selectAction('create')">Создать</button>
    </div>

    <div id="formContainer">
        @using (Html.BeginForm("AddNews", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <form id="newsForm" class="needs-validation" novalidate>
                <div id="idInput" class="mb-3" style="display: none;">
                    <label for="newsId" class="form-label">ID новости</label>
                    <input type="number" id="newsId" name="Id" class="form-control" />
                    <button type="button" class="btn btn-warning mt-2" onclick="selectAction('update')">Редактировать</button>
                    <button type="submit" class="btn btn-danger mt-2" formaction="/Admin/DeleteNews">Удалить</button>
                </div>

                <div id="createUpdateFields">
                    <div class="mb-3">
                        <label for="Title" class="form-label">Заголовок</label>
                        <input type="text" id="Title" name="Title" class="form-control" required />
                        <div class="invalid-feedback">Пожалуйста, введите заголовок.</div>
                    </div>
                    <div class="mb-3">
                        <label for="Content" class="form-label">Содержание</label>
                        <textarea id="Content" name="Content" class="form-control" rows="5" required></textarea>
                        <div class="invalid-feedback">Пожалуйста, введите содержание.</div>
                    </div>
                    <div class="mb-3">
                        <label for="Author" class="form-label">Автор</label>
                        <input type="text" id="Author" name="Author" class="form-control" required />
                        <div class="invalid-feedback">Пожалуйста, укажите автора.</div>
                    </div>
                    <div class="mb-3">
                        <label for="Category" class="form-label">Категория</label>
                        <input type="text" id="Category" name="Category" class="form-control" required />
                        <div class="invalid-feedback">Пожалуйста, укажите категорию.</div>
                    </div>
                    <div class="mb-3">
                        <label for="Tags" class="form-label">Теги</label>
                        <input type="text" id="Tags" name="Tags" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="PublishedDate" class="form-label">Дата публикации</label>
                        <input type="datetime-local" id="PublishedDate" name="PublishedDate" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="ImageString" class="form-label">Ссылка на изображение</label>
                        <input type="text" id="ImageString" name="ImageString" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Изображения</label>
                        <input type="file" name="Images" class="form-control" multiple />
                    </div>
                </div>

                <button type="submit" id="submitButton" class="btn btn-primary">Создать</button>
            </form>
        }
    </div>
</div>

<script>
    function selectAction(action) {
        document.getElementById('idInput').style.display = (action === 'getById' || action === 'update') ? 'block' : 'none';
        document.getElementById('createUpdateFields').style.display = (action === 'create' || action === 'update') ? 'block' : 'none';

        let form = document.getElementById('newsForm');
        if (action === 'getList') {
            form.setAttribute('action', '/Admin/GetNewsList');
        } else if (action === 'getById') {
            form.setAttribute('action', '/Admin/GetNewsByIdAction');
        } else if (action === 'update') {
            form.setAttribute('action', '/Admin/UpdateNews');
        } else if (action === 'create') {
            form.setAttribute('action', '/Admin/AddNews');
        }

        document.getElementById('submitButton').innerText =
            action === 'update' ? 'Обновить' : action === 'create' ? 'Создать' : 'Отправить';
    }
</script>
