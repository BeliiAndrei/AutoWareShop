@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var role = SessionHelper.User?.Role ?? string.Empty;
    var isAdmin = role == "Admin" ? true : false;
}

@section Styles {
    @RenderSection("Styles", false)
}
<div class="container-fluid">

    <div class="primary-layout">
        <div class="primary-content">
            <div class="sidebar">
                <div class="category-nav d-none d-md-block">
                    <ul class="category-nav__list">
                        @if (isAdmin)
                        {
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("NewsEditor", "Admin")">Управление новостями</a></li>
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("BookReservations", "Admin")">Управление заказами книг</a></li>
                        }

                    </ul>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}