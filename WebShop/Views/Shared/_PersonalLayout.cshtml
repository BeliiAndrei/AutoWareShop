@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var role = SessionHelper.User?.Role ?? string.Empty;
    var isAdmin = role == "Admin" ? true : false;
}

@section Styles {
    @RenderSection("Styles", false)
}
<div class="container-fluid">

    <div class="primary-layout">
        <div class="primary-content">
            <div class="sidebar">
                <div class="category-nav d-none d-md-block">
                    <ul class="category-nav__list">
                        @if (isAdmin)
                        {
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("UpdateStudyRoomStatus", "Admin")">Управление читальными залами</a></li>
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Clients", "Admin")">Управление читателями</a></li>
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Products", "Admin")">Управление книгами</a></li>
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("NewsEditor", "Admin")">Управление новостями</a></li>
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Orders", "Admin")">Управление заказами книг</a></li>
                        }
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Basket_step_1", "BasketPayment")">Мои книги</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Orders", "Profile")">История заказов</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Payment", "BasketPayment")">Продление книг</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("ProfileUser", "Profile")">Профиль читателя</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Search_result", "CatalogSearch", new {Result_SearchString = "new"})">Новинки</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("DeliveryList", "Delivery")">Адрес для доставки</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("MyBooks", "CatalogSearch")">Взятые книги</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("StudyRooms", "OtherServices")">Бронирование залов</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Faq", "Informational")">Помощь</a></li>
                    </ul>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}