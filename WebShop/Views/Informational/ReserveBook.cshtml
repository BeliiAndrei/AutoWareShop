@{
    ViewBag.Title = "Забронировать книгу";
}

@model WebShop.Domain.ResBook.ResBook

@section Styles {
    <style>
        .reservation-section {
            padding: 50px 0;
        }

        .reservation-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .page-title {
            text-align: center;
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .page-subtitle {
            text-align: center;
            color: #7f8c8d;
            font-size: 1.2rem;
            margin-bottom: 40px;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 0;
        }

        .form-full-width {
            grid-column: 1 / -1;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #2c3e50;
            font-size: 1.1rem;
        }

        .form-input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-input:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
                outline: none;
            }

        .form-select {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            font-size: 1rem;
            background: white;
            cursor: pointer;
        }

        .form-textarea {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            font-size: 1rem;
            min-height: 100px;
            resize: vertical;
            font-family: inherit;
        }

        .btn-reserve {
            background: linear-gradient(135deg, #27ae60, #2ecc71);
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 25px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: block;
            margin: 30px auto 0;
            width: 200px;
        }

            .btn-reserve:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(39, 174, 96, 0.3);
            }

            .btn-reserve:disabled {
                background: #bdc3c7;
                cursor: not-allowed;
                transform: none;
                box-shadow: none;
            }

        .info-box {
            background: #e3f2fd;
            border-radius: 15px;
            padding: 25px;
            margin-top: 30px;
            border-left: 5px solid #3498db;
        }

        .info-title {
            font-weight: 600;
            color: #1976d2;
            margin-bottom: 10px;
            font-size: 1.2rem;
        }

        .steps-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 40px 0;
        }

        .step-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

        .step-number {
            background: #3498db;
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-weight: bold;
        }

        .step-title {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .book-suggestions {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }

        .suggestion-title {
            font-weight: 600;
            color: #856404;
            margin-bottom: 10px;
        }

        .validation-message {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: 5px;
            display: none;
        }

        .form-input.error {
            border-color: #e74c3c;
        }

        .loading {
            opacity: 0.7;
            pointer-events: none;
        }

        .field-validation-error {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }

        .alert-success {
            background: #d4edda;
            border: 1px solid #c3e6cb;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            color: #155724;
        }
    </style>
}

<div class="container-fluid">
    <div class="reservation-section">
        <h1 class="page-title">📌 Забронировать книгу</h1>
        <p class="page-subtitle">Заполните форму, и мы найдем нужную вам книгу в течение 24 часов</p>

        <!-- Шаги процесса -->
        <div class="steps-container">
            <div class="step-card">
                <div class="step-number">1</div>
                <div class="step-title">Заполните заявку</div>
                <div class="step-desc">Укажите данные книги и ваши контакты</div>
            </div>
            <div class="step-card">
                <div class="step-number">2</div>
                <div class="step-title">Мы ищем книгу</div>
                <div class="step-desc">Проверяем наличие в нашем фонде и партнерских библиотеках</div>
            </div>
            <div class="step-card">
                <div class="step-number">3</div>
                <div class="step-title">Получаете уведомление</div>
                <div class="step-desc">Свяжемся с вами когда книга будет доступа</div>
            </div>
        </div>

        <div class="reservation-card">
            @using (Html.BeginForm("ReserveBook", "Informational", FormMethod.Post, new { id = "reservationForm", @class = "reservation-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Сообщение об успехе -->
                if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <div class="form-row">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, "📖 Название книги *", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Name, new
                        {
                            @class = "form-input",
                            placeholder = "Например: Мастер и Маргарита",
                            required = "required"
                        })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "field-validation-error" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Author, "👤 Автор книги", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Author, new
                        {
                            @class = "form-input",
                            placeholder = "Например: Михаил Булгаков"
                        })
                        @Html.ValidationMessageFor(m => m.Author, "", new { @class = "field-validation-error" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Genre, "📚 Жанр книги", new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.Genre, new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Выберите жанр", Value = "" },
                            new SelectListItem { Text = "Художественная литература", Value = "Художественная литература" },
                            new SelectListItem { Text = "Научная фантастика", Value = "Научная фантастика" },
                            new SelectListItem { Text = "Классика", Value = "Классика" },
                            new SelectListItem { Text = "Детективы", Value = "Детективы" },
                            new SelectListItem { Text = "Романы", Value = "Романы" },
                            new SelectListItem { Text = "Исторические", Value = "Исторические" },
                            new SelectListItem { Text = "Научная литература", Value = "Научная литература" },
                            new SelectListItem { Text = "Детская литература", Value = "Детская литература" },
                            new SelectListItem { Text = "Другое", Value = "Другое" }
                        }, new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.Genre, "", new { @class = "field-validation-error" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        @Html.LabelFor(m => m.YouName, "👤 Ваше полное имя *", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.YouName, new
                        {
                            @class = "form-input",
                            placeholder = "Иванов Иван Иванович",
                            required = "required"
                        })
                        @Html.ValidationMessageFor(m => m.YouName, "", new { @class = "field-validation-error" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, "📞 Телефон для связи *", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.PhoneNumber, new
                        {
                            @class = "form-input",
                            placeholder = "+373 XX XXX XXX",
                            type = "tel",
                            required = "required"
                        })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "field-validation-error" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group form-full-width">
                        @Html.LabelFor(m => m.Email, "📧 Email (для электронного уведомления)", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new
                        {
                            @class = "form-input",
                            placeholder = "your@email.com",
                            type = "email"
                        })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group form-full-width">
                        @Html.LabelFor(m => m.Info, "💬 Дополнительная информация", new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Info, new
                        {
                            @class = "form-textarea",
                            placeholder = "Укажите особые пожелания, издание, год выпуска, ISBN или другую важную информацию...",
                            rows = "4"
                        })
                        @Html.ValidationMessageFor(m => m.Info, "", new { @class = "field-validation-error" })
                    </div>
                </div>

                <button type="submit" class="btn-reserve" id="submitBtn">📨 Отправить заявку</button>
            }
        </div>

        <!-- Информационный блок -->
        <div class="info-box">
            <div class="info-title">ℹ️ Как работает бронирование?</div>
            <p>• Мы ищем книгу в нашем фонде и партнерских библиотеках</p>
            <p>• Срок выполнения заявки: 1-3 рабочих дня</p>
            <p>• Книга резервируется для вас на 7 дней</p>
            <p>• Уведомление приходит по SMS или email</p>
            <p>• Получить книгу можно в любой рабочий день с 8:00 до 19:00</p>
        </div>

        <!-- Блок с предложениями -->
        <div class="book-suggestions">
            <div class="suggestion-title">💡 Не нашли нужную книгу?</div>
            <p>Посмотрите наши популярные разделы:</p>
            <ul>
                <li><a href="@Url.Action("Catalog", "CatalogSearch")" style="color: #1976d2;">📚 Новинки литературы</a></li>
                <li><a href="@Url.Action("Catalog", "CatalogSearch")" style="color: #1976d2;">🎓 Учебные пособия</a></li>
                <li><a href="@Url.Action("Catalog", "CatalogSearch")" style="color: #1976d2;">🧸 Детские книги</a></li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('reservationForm').addEventListener('submit', function (e) {
            const name = document.getElementById('Name');
            const youName = document.getElementById('YouName');
            const phone = document.getElementById('PhoneNumber');

            let isValid = true;

            // Сброс ошибок
            document.querySelectorAll('.field-validation-error').forEach(msg => msg.style.display = 'none');
            document.querySelectorAll('.form-input').forEach(input => input.classList.remove('error'));

            // Валидация названия книги
            if (!name.value.trim()) {
                showError(name, 'Пожалуйста, введите название книги');
                isValid = false;
            }

            // Валидация имени
            if (!youName.value.trim()) {
                showError(youName, 'Пожалуйста, введите ваше имя');
                isValid = false;
            }

            // Валидация телефона
            if (!phone.value.trim()) {
                showError(phone, 'Пожалуйста, введите номер телефона');
                isValid = false;
            }

            if (!isValid) {
                e.preventDefault();
            }
        });

        function showError(input, message) {
            input.classList.add('error');
            const errorElement = input.nextElementSibling;
            if (errorElement && errorElement.classList.contains('field-validation-error')) {
                errorElement.textContent = message;
                errorElement.style.display = 'block';
            }
        }

        // Автоочистка сообщения об успехе через 5 секунд
        setTimeout(function () {
            var successMessage = document.querySelector('.alert-success');
            if (successMessage) {
                successMessage.style.display = 'none';
            }
        }, 5000);
    </script>
}