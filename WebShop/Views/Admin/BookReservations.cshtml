@model List<WebShop.Domain.ResBook.ResBook>

@{
    ViewBag.Title = "Управление бронированиями книг";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Заголовок страницы -->
            <div class="page-header mb-4">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h1 class="h3 mb-1">📚 Управление бронированиями книг</h1>
                        <p class="text-muted mb-0">Просматривайте, подтверждайте и управляйте заявками на бронирование книг</p>
                    </div>
                    <div class="badge bg-primary fs-6">
                        @Model.Count заявок
                    </div>
                </div>
            </div>

            <!-- Сообщения системы -->
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-@(TempData["AlertType"] ?? "info") alert-dismissible fade show mb-4" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-info-circle me-2"></i>
                        <span>@TempData["Message"]</span>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Основная карточка с таблицей -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0 text-dark">
                            <i class="fas fa-list-check me-2"></i>Список заявок на бронирование
                        </h5>
                        <div class="text-muted small">
                            Обновлено: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">№</th>
                                        <th>Информация о книге</th>
                                        <th>Данные клиента</th>
                                        <th>Контакты</th>
                                        <th class="text-center">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reservation in Model)
                                    {
                                        <tr class="border-bottom">
                                            <!-- ID -->
                                            <td class="ps-4 fw-semibold text-muted">
                                                #@reservation.Id
                                            </td>

                                            <!-- Информация о книге -->
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="fw-semibold text-dark mb-1">@reservation.Name</span>
                                                    <div class="d-flex gap-3 text-sm text-muted">
                                                        @if (!string.IsNullOrEmpty(reservation.Author))
                                                        {
                                                            <span><i class="fas fa-user-edit me-1"></i>@reservation.Author</span>
                                                        }
                                                        @if (!string.IsNullOrEmpty(reservation.Genre))
                                                        {
                                                            <span><i class="fas fa-tag me-1"></i>@reservation.Genre</span>
                                                        }
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(reservation.Info))
                                                    {
                                                        <small class="text-muted mt-1">@reservation.Info</small>
                                                    }
                                                </div>
                                            </td>

                                            <!-- Данные клиента -->
                                            <td>
                                                <div class="fw-medium text-dark">@reservation.YouName</div>
                                                <small class="text-muted">Заявка на бронирование</small>
                                            </td>

                                            <!-- Контакты -->
                                            <td>
                                                <div class="d-flex flex-column gap-1">
                                                    <a href="tel:@reservation.PhoneNumber"
                                                       class="text-decoration-none text-dark d-flex align-items-center">
                                                        <i class="fas fa-phone me-2 text-primary"></i>
                                                        @reservation.PhoneNumber
                                                    </a>
                                                    @if (!string.IsNullOrEmpty(reservation.Email))
                                                    {
                                                        <a href="mailto:@reservation.Email"
                                                           class="text-decoration-none text-dark d-flex align-items-center">
                                                            <i class="fas fa-envelope me-2 text-primary"></i>
                                                            @reservation.Email
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted small">
                                                            <i class="fas fa-envelope me-2"></i>Не указан
                                                        </span>
                                                    }
                                                </div>
                                            </td>

                                            <!-- Действия -->
                                            <td>
                                                <div class="d-flex justify-content-center gap-2">
                                                    <!-- Подтверждение -->
                                                    @using (Html.BeginForm("ConfirmBookReservation", "Admin", FormMethod.Post, new { @class = "d-inline" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        @Html.Hidden("id", reservation.Id)
                                                        <button type="submit"
                                                                class="btn btn-accept btn-sm"
                                                                title="Подтвердить бронирование"
                                                                onclick="return confirm('Подтвердить бронирование книги для @reservation.YouName?')">
                                                            <i class="fas fa-check me-1"></i>Принять
                                                        </button>
                                                    }

                                                    <!-- Детали -->
                                                    <a href="@Url.Action("BookReservationDetails", "Admin", new { id = reservation.Id })"
                                                       class="btn btn-details btn-sm"
                                                       title="Просмотреть детали заявки">
                                                        <i class="fas fa-eye me-1"></i>Детали
                                                    </a>

                                                    <!-- Удаление -->
                                                    @using (Html.BeginForm("DeleteBookReservation", "Admin", FormMethod.Post, new { @class = "d-inline" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        @Html.Hidden("id", reservation.Id)
                                                        <button type="submit"
                                                                class="btn btn-delete btn-sm"
                                                                title="Удалить заявку"
                                                                onclick="return confirm('Вы уверены, что хотите удалить эту заявку на бронирование?')">
                                                            <i class="fas fa-trash me-1"></i>Удалить
                                                        </button>
                                                    }
                                                </div>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <!-- Состояние пустого списка -->
                        <div class="text-center py-5">
                            <div class="py-4">
                                <i class="fas fa-inbox fa-4x text-light mb-3"></i>
                                <h4 class="text-muted mb-2">Нет заявок на бронирование</h4>
                                <p class="text-muted mb-0">Здесь будут отображаться заявки от пользователей</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        
        .btn-accept {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: #fff;
            border: none;
            transition: all 0.25s ease;
        }

        .btn-accept:hover {
            background: linear-gradient(135deg, #20c997, #28a745);
            transform: translateY(-1px);
            box-shadow: 0 3px 6px rgba(32, 201, 151, 0.4);
        }

        .btn-details {
            background: #fff;
            color: #0d6efd;
            border: 1px solid #0d6efd;
            transition: all 0.25s ease;
        }

            .btn-details:hover {
                background: #0d6efd;
                color: #fff;
                box-shadow: 0 3px 6px rgba(13, 110, 253, 0.4);
            }

        .btn-delete {
            background: #fff;
            color: #dc3545;
            border: 1px solid #dc3545;
            transition: all 0.25s ease;
        }

            .btn-delete:hover {
                background: #dc3545;
                color: #fff;
                transform: translateY(-1px);
                box-shadow: 0 3px 6px rgba(220, 53, 69, 0.4);
            }

        .btn i {
            transition: transform 0.25s ease;
        }

        .btn-delete:hover i {
            transform: rotate(-15deg);
        }
    </style>

  
    </style>
}

@section Scripts {
    <script>
        // Автоскрытие сообщений через 5 секунд
        document.addEventListener('DOMContentLoaded', function () {
            // Скрытие alert через 5 секунд
            setTimeout(function () {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);

            // Блокировка кнопок при отправке формы
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function () {
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Обработка...';
                    }
                });
            });
        });
    </script>
}