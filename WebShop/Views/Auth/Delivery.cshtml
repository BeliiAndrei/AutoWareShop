@{
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
    ViewBag.Title = "Delivery";
}

<h2 class="text-center mb-53">Оформление доставки</h2>

<form asp-action="SubmitDelivery" method="post" class="p-4 shadow-lg rounded bg-light">

    <div class="form-group mt-3">
        <label asp-for="City">Город</label>
        <input asp-for="City" class="form-control" placeholder="Введите ваш город" required />
    </div>
    <div class="form-group mt-3">
        <label asp-for="Street">Улица</label>
        <input asp-for="Street" class="form-control" placeholder="Введите улицу" required />
    </div>

    <div class="form-group mt-3">
        <label asp-for="Address">Дом / квартира</label>
        <input asp-for="Address" class="form-control" placeholder="Введите номер дома и квартиры" required />
    </div>

    <div class="form-group mt-3">
        <label asp-for="PaymentMethod">Способ оплаты</label>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="cash">Наличными</option>
            <option value="card">Картой</option>
        </select>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Comment">Дополнительные пожелания</label>
        <textarea asp-for="Comment" class="form-control" rows="3" placeholder="Оставьте комментарий (необязательно)"></textarea>
    </div>

    <button type="submit" class="btn btn-primary btn-lg w-100 mt-4">🚀 Подтвердить данные</button>
</form>
