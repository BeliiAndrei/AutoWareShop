@model IEnumerable<WebShop.Domain.News.News>

@{
    ViewBag.Title = "Все новости";
}

<div class="container mt-4">
    <h2>Все новости</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var news in Model)
            {
                <div class="col-sm-4 mb-4">
                    <div class="card">
                        @if (news.ImageData != null)
                        {
                            <img src="data:@news.ImageMimeType;base64,@Convert.ToBase64String(news.ImageData)" class="card-img-top" alt="Изображение новости">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@news.Title</h5>
                            <p class="card-text">@news.Content</p>
                            <a href="@Url.Action("Details", "Informational", new { id = news.Id })" class="btn btn-primary">Читать больше</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Новостей нет.</p>
    }
</div>
