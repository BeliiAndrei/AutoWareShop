@{
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
    ViewBag.Title = "Delivery";
}

@model WebShop.Models.DeliveryViewModel


<div class="container-fluid">
    <div class="main-content">
        @if (TempData["Message"] != null)
        {

            <div class="alert alert-success" role="alert" style="color:red">
                @TempData["Message"]
            </div>
        }
        <div class="primary-layout">
            <div class="product-main-section">
                <div class="product-main">
                    <div class="row">
                        <div class="col-12">
                            <header class="product-header">
                                <h1>Редактировать продукт</h1>
                            </header>

                            @using (Html.BeginForm("Delivery", "Auth", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.City, "Название Города")
                                            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.PostalCode, "Пост код почты")
                                            @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Street, "Улица")
                                            @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.House, "Дом")
                                            @Html.TextBoxFor(m => m.House, new { @class = "form-control" })

                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Block, "Блок")
                                            @Html.TextBoxFor(m => m.Block, new { @class = "form-control", type = "number" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Apartment, "Квартира")
                                            @Html.TextBoxFor(m => m.Apartment, new { @class = "form-control", type = "number" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Comment, "Заметка")
                                    @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", rows = 4 })
                                </div>


                                <div class="form-group">
                                    <input type="submit" value="Сохранить изменения" class="btn--main btn" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

