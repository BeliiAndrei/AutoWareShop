@model WebShop.Models.DeliveryViewModel
@{
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
    ViewBag.Title = "Редактирование адреса";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Редактирование адреса</h2>

            @using (Html.BeginForm("EditDelivery", "Delivery", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.UserId)

                <div class="form-group">
                    @Html.LabelFor(m => m.PostalCode, "Почтовый индекс*")
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.PostalCode)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.City, "Город*")
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.City)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Street, "Улица")
                    @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.House, "Дом*")
                        @Html.TextBoxFor(m => m.House, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.Block, "Корпус/строение")
                        @Html.TextBoxFor(m => m.Block, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.Apartment, "Квартира/офис")
                        @Html.TextBoxFor(m => m.Apartment, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Comment, "Комментарий")
                    @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", rows = 3 })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                    <a href="@Url.Action("DeliveryList")" class="btn btn-secondary">Отмена</a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .field-validation-error {
            color: #dc3545;
            font-size: 0.875em;
        }
    </style>
}