@model IEnumerable<WebShop.Models.NewsViewModel>
@{
    ViewBag.Title = "Редактор новостей";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml"; // Убедитесь, что этот файл существует
}

<div class="container mt-4">
    <h2>Редактор новостей</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-@(TempData["AlertType"] ?? "info")">
            @TempData["Message"]
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Заголовок</th>
                <th>Автор</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var news in Model)
            {
                <tr>
                    <td>@news.Id</td>
                    <td>@news.Title</td>
                    <td>@news.Author</td>
                    <td>
                        @Html.ActionLink("Редактировать", "NewsUpdate", new { id = news.Id }, new { @class = "btn btn-sm btn-primary" })
                        @using (Html.BeginForm("DeleteNews", "Admin", new { id = news.Id }, FormMethod.Post, new { @class = "d-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены?')">Удалить</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        @Html.ActionLink("Добавить новость", "News", null, new { @class = "btn btn-success" })
    </div>
</div>