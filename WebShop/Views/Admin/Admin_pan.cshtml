@{
    ViewBag.Title = "Admin_pan";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<main class="main-content">
    <h1 class="main-title">Профиль</h1>
    <form action="/" method="POST" name="user-profile-edit">
        <div class="section-area">
            <div class="section-area__heading">Личные данные</div>
            <div class="manual-params manual-params--bigger">
                <dl class="manual-params__param">
                    <dt class="manual-params__value">Ваша Фамилия</dt>
                    <dd class="manual-params__property">Иванов</dd>
                </dl>
                <dl class="manual-params__param">
                    <dt class="manual-params__value">Ваше Имя</dt>
                    <dd class="manual-params__property">Николай</dd>
                </dl>
                <dl class="manual-params__param">
                    <dt class="manual-params__value">Дата рождения</dt>
                    <dd class="manual-params__property">20 марта 1992</dd>
                </dl>
                <dl class="manual-params__param">
                    <dt class="manual-params__value">Телефон мобильный</dt>
                    <dd class="manual-params__property">+373 79 234 731</dd>
                </dl>
                <dl class="manual-params__param">
                    <dt class="manual-params__value">Телефон стационарный</dt>
                    <dd class="manual-params__property">+373 2244 58 63</dd>
                </dl><a class="manual-params__edit" href="#">
                    <svg class="icon icon-pen manual-params__edit-icon">
                        <use href="assets/images/svg/symbol/sprite.svg#pen"></use>
                    </svg>Редактировать
                </a>
            </div>
            <div class="section-area__bordered">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="section-area__field">
                            <label class="section-area__label" for="bl-log">Логин</label>
                            <input class="section-area__input" type="text" name="block-login" id="bl-log">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="section-area__field">
                            <label class="section-area__label" for="bl-code">Код пользователя</label>
                            <input class="section-area__input" type="text" name="block-code" id="bl-code">
                        </div>
                    </div>
                    <div class="col-sm-4 align-self-center">
                        <div class="checkbox-label">
                            <input class="checkbox-label__input" type="checkbox" name="is-blocked" checked id="opt-block">
                            <label class="checkbox-label__main" for="opt-block">Заблокировать</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="section-area">
                <div class="section-area__heading">Изменить пароль</div>
                <div class="section-area__bordered">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="section-area__field">
                                <label class="section-area__label" for="cr-psw">Текущий пароль <span>*</span></label>
                                <input class="section-area__input" type="password" name="current-password" id="cr-psw">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="section-area__field">
                                <label class="section-area__label" for="new-psw">Новый пароль <span>*</span></label>
                                <input class="section-area__input section-area__input--gray" type="password" name="new-password" id="new-psw">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="section-area__field">
                                <label class="section-area__label" for="new-ver-psw">Новый пароль еще раз <span>*</span></label>
                                <input class="section-area__input section-area__input--gray" type="password" name="new-password-check" id="new-ver-psw">
                            </div>
                        </div>
                    </div><a class="section-area__save-psw" href="#">
                        <svg class="icon icon-save section-area__save-psw-icon">
                            <use href="assets/images/svg/symbol/sprite.svg#save"></use>
                        </svg>Сохранить изменения пароля
                    </a>
                </div>
            </div>
            <div class="section-area">
                <div class="section-area__heading">Роли в системе</div>
                <div class="section-area__bordered">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="section-area__checkbox checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-opt-1" id="opt-1" checked>
                                <label class="checkbox-label__main" for="opt-1">Администратор системы безопастности</label>
                            </div>
                            <div class="section-area__checkbox checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-opt-2" id="opt-2">
                                <label class="checkbox-label__main" for="opt-2">Менеджер по VIN запросам</label>
                            </div>
                            <div class="section-area__checkbox checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-opt-3" id="opt-3">
                                <label class="checkbox-label__main" for="opt-3">Менеджер по ключевым сотрудникам</label>
                            </div>
                            <div class="section-area__checkbox checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-opt-4" id="opt-4" checked>
                                <label class="checkbox-label__main" for="opt-4">Менеджер по общим вопросам</label>
                            </div>
                            <div class="section-area__checkbox checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-opt-5" id="opt-5" checked>
                                <label class="checkbox-label__main" for="opt-5">Менеджер контента</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="section-area__checkbox checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-opt-6" id="opt-6" checked>
                                <label class="checkbox-label__main" for="opt-6">Статистика</label>
                            </div>
                            <div class="section-area__checkbox checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-opt-7" id="opt-7">
                                <label class="checkbox-label__main" for="opt-7">Менеджер предприятий</label>
                            </div>
                            <div class="section-area__checkbox checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-opt-8" id="opt-8">
                                <label class="checkbox-label__main" for="opt-8">Доступ к программе лояльности</label>
                            </div>
                            <div class="section-area__checkbox checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-opt-9" id="opt-9" checked>
                                <label class="checkbox-label__main" for="opt-9">Менеджер по работе с клиентами</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="section-area">
                <div class="section-area__heading">Поиск по VIN</div>
                <div class="section-area__bordered">
                    <div class="row">
                        <div class="col-sm-3 align-self-center">
                            <div class="checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-vin-opt-1" id="vin-opt-1" checked>
                                <label class="checkbox-label__main" for="vin-opt-1">Неограниченно</label>
                            </div>
                        </div>
                        <div class="col-sm-3 align-self-center">
                            <div class="checkbox-label">
                                <input class="checkbox-label__input" type="checkbox" name="is-vin-opt-2" id="vin-opt-2">
                                <label class="checkbox-label__main" for="vin-opt-2">По умолчанию</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="section-area__field">
                                <label class="section-area__label" for="tenure-log">Срок действия</label>
                                <input class="section-area__input" type="text" name="tenure-log" id="tenure-log">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="section-area">
                <div class="section-area__heading">Представительства</div>
                <div class="client-options-wrap">
                    <div class="client-options">
                        <div class="row">
                            <div class="col-6 col-sm-3">
                                <a class="client-option" href="#">
                                    <figure class="client-option__main">
                                        <div class="client-option__img-wrap">
                                            <svg class="icon icon-key client-option__img">
                                                <use href="assets/images/svg/symbol/sprite.svg#key"></use>
                                            </svg>
                                        </div>
                                        <figcaption class="client-option__heading">Ключевой доступ</figcaption>
                                    </figure>
                                </a>
                            </div>
                            <div class="col-6 col-sm-3">
                                <a class="client-option" href="#">
                                    <figure class="client-option__main">
                                        <div class="client-option__img-wrap">
                                            <svg class="icon icon-contacts client-option__img">
                                                <use href="assets/images/svg/symbol/sprite.svg#contacts"></use>
                                            </svg>
                                        </div>
                                        <figcaption class="client-option__heading">Просмотр всех заказов клиента</figcaption>
                                    </figure>
                                </a>
                            </div>
                            <div class="col-6 col-sm-3">
                                <a class="client-option" href="#">
                                    <figure class="client-option__main">
                                        <div class="client-option__img-wrap">
                                            <svg class="icon icon-file client-option__img">
                                                <use href="assets/images/svg/symbol/sprite.svg#file"></use>
                                            </svg>
                                        </div>
                                        <figcaption class="client-option__heading">Доступ к актам сверки</figcaption>
                                    </figure>
                                </a>
                            </div>
                            <div class="col-6 col-sm-3">
                                <a class="client-option" href="#">
                                    <figure class="client-option__main">
                                        <div class="client-option__img-wrap">
                                            <svg class="icon icon-shopping-cart client-option__img">
                                                <use href="assets/images/svg/symbol/sprite.svg#shopping-cart"></use>
                                            </svg>
                                        </div>
                                        <figcaption class="client-option__heading">Может делать заказ</figcaption>
                                    </figure>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="client-detail">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Клиент</th>
                                    <th>&nbsp;</th>
                                    <th class="text-center">
                                        <svg class="icon icon-key">
                                            <use href="assets/images/svg/symbol/sprite.svg#key"></use>
                                        </svg>
                                    </th>
                                    <th class="text-center">
                                        <svg class="icon icon-contacts">
                                            <use href="assets/images/svg/symbol/sprite.svg#contacts"></use>
                                        </svg>
                                    </th>
                                    <th class="text-center">
                                        <svg class="icon icon-file">
                                            <use href="assets/images/svg/symbol/sprite.svg#file"></use>
                                        </svg>
                                    </th>
                                    <th class="text-center">
                                        <svg class="icon icon-shopping-cart">
                                            <use href="assets/images/svg/symbol/sprite.svg#shopping-cart"></use>
                                        </svg>
                                    </th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Администратор Webmall</td>
                                    <td>&nbsp;</td>
                                    <td>
                                        <div class="checkbox-label">
                                            <input class="checkbox-label__input" type="checkbox" name="s-opt-1" id="s-opt-1">
                                            <label class="checkbox-label__main" for="s-opt-1"></label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="checkbox-label">
                                            <input class="checkbox-label__input" type="checkbox" checked name="s-opt-2" id="s-opt-2">
                                            <label class="checkbox-label__main" for="s-opt-2"></label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="checkbox-label">
                                            <input class="checkbox-label__input" type="checkbox" name="s-opt-3" id="s-opt-3">
                                            <label class="checkbox-label__main" for="s-opt-3"></label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="checkbox-label">
                                            <input class="checkbox-label__input" type="checkbox" name="s-opt-4" id="s-opt-4">
                                            <label class="checkbox-label__main" for="s-opt-4"></label>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <a class="user-status-remove" href="#">
                                            <svg class="icon icon-close">
                                                <use href="assets/images/svg/symbol/sprite.svg#close"></use>
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Кирюхина Татьяна</td>
                                    <td>&nbsp;</td>
                                    <td>
                                        <div class="checkbox-label">
                                            <input class="checkbox-label__input" type="checkbox" checked name="s-opt-5" id="s-opt-5">
                                            <label class="checkbox-label__main" for="s-opt-5"></label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="checkbox-label">
                                            <input class="checkbox-label__input" type="checkbox" checked name="s-opt-6" id="s-opt-6">
                                            <label class="checkbox-label__main" for="s-opt-6"></label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="checkbox-label">
                                            <input class="checkbox-label__input" type="checkbox" checked name="s-opt-7" id="s-opt-7">
                                            <label class="checkbox-label__main" for="s-opt-7"></label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="checkbox-label">
                                            <input class="checkbox-label__input" type="checkbox" checked name="s-opt-8" id="s-opt-8">
                                            <label class="checkbox-label__main" for="s-opt-8"></label>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <a class="user-status-remove" href="#">
                                            <svg class="icon icon-close">
                                                <use href="assets/images/svg/symbol/sprite.svg#close"></use>
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="section-area__summary">
                <a class="section-area__summary-cancel" href="#"><i class="fa fa-times-circle"></i> Отмена</a>
                <input class="btn btn--main" type="submit" name="send-data" value="Сохранить изменения">
            </div>
        </div>
    </form>
</main>