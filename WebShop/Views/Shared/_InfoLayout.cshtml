@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var role = SessionHelper.User?.Role ?? string.Empty;
    var isAdmin = role == "Admin" ? true : false;
}

@section Styles {
    @RenderSection("Styles", false)
}
<div class="container-fluid">

    <div class="primary-layout">
        <div class="primary-content">
            <div class="sidebar">
                <div class="category-nav d-none d-md-block">
                    <ul class="category-nav__list">
                        @if (isAdmin)
                        {
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Clients", "Admin")">Управление читателями</a></li>
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Products", "Admin")">Управление книгами</a></li>
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("NewsEditor", "Admin")">Управление новостями</a></li>
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Orders", "Admin")">Управление заказами книг</a></li>
                            <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("UpdateStudyRoomStatus", "Admin")">Управление читальными залами</a></li>
                        }
                        <li class="category-nav__item"><a class="category-nav__link @*important*@" href="@Url.Action("Search_result", "CatalogSearch", new {Result_SearchString = "new"})">Новинки</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("About_2", "Informational")">О библиотеке</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("About_1", "Informational")">Миссия и ценности</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("ViewNews", "Informational")">Новости</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Vacation", "Informational")">Вакансии</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Faq", "Informational")">Часто задаваемые вопросы</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("StudyRooms", "OtherServices")">Читальные залы</a></li>
                        <li class="category-nav__item"><a class="category-nav__link" href="@Url.Action("Contacts", "Informational")">Контакты</a></li>
                    </ul>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}